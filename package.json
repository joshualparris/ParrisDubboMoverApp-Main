{
  "name": "pdm-parris-dubbo-mover",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -k \"npm --workspace=server run dev\" \"npm --workspace=client run dev\"",
    "build": "npm install --include=dev && npm --workspace=client run build && npm --workspace=server run build",
    "start": "npm --workspace=server run start",
    "format": "prettier --write .",
    "lint": "eslint --ext .js,.jsx .",
    "fix-bin-permissions:unix": "sh ./scripts/fix-bin-permissions.sh",
    "fix-bin-permissions:windows": "powershell -ExecutionPolicy Bypass -File ./scripts/fix-bin-permissions.ps1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "npm-force-resolutions": "^0.0.10"
  }
}